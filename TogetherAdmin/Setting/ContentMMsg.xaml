        <DockPanel Margin="0,5,0,0" DockPanel.Dock="Top">
            <Label
                Height="55"
                Margin="0,0,30,0"
                Content="발송설정"
                FontSize="15"
                FontWeight="Bold"
                Foreground="#5E6262" />
            <DockPanel
